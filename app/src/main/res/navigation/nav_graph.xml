<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/painelFragment">

    <activity android:id="@+id/mainActivity"
              android:name="com.example.hsmassistantandroid.ui.activities.MainActivity"
              android:label="activity_main"
              tools:layout="@layout/activity_main"/>

    <fragment android:id="@+id/painelFragment"
              android:name="com.example.hsmassistantandroid.ui.fragments.PainelFragment"
              android:label="fragment_painel"
              tools:layout="@layout/fragment_painel">

        <action android:id="@+id/action_painelFragment_to_objetosListFragment"
                app:destination="@id/objetosListFragment"/>
        <action android:id="@+id/action_painelFragment_to_gestaoUsuarioFragment"
                app:destination="@id/gestaoUsuarioFragment"/>
        <action android:id="@+id/action_painelFragment_to_relacaoFragment" app:destination="@id/relacaoFragment"/>
    </fragment>

    <fragment android:id="@+id/objetosListFragment"
              android:name="com.example.hsmassistantandroid.ui.fragments.ObjetosListFragment"
              android:label="fragment_objetos_list" tools:layout="@layout/fragment_objetos_list"/>
    <fragment android:id="@+id/gestaoUsuarioFragment"
              android:name="com.example.hsmassistantandroid.ui.fragments.gestaoUsuarioFragment"
              android:label="fragment_gestao_usuario_list" tools:layout="@layout/fragment_gestao_usuario_list"/>
    <fragment android:id="@+id/relacaoFragment"
              android:name="com.example.hsmassistantandroid.ui.fragments.relacaoFragment"
              android:label="relacao_fragment" tools:layout="@layout/relacao_fragment"/>
</navigation>